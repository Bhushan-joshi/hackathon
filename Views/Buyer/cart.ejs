<%- include('../includes/head.ejs') %>
<link rel = "stylesheet" href ="/styleSheets/cart.css">
</head>

<body>
    <%- include('../includes/navbar.ejs') %>
    <main>
        <% if (products.length > 0) { %>
            <ul class="cart__item-list">
                <% products.forEach(p => { %>
                <li class="cart__item">
                    <h1><%= p.productid.Title %></h1>
                    <h4>Quantity: <%= p.quantity %></h4>
                    <h4>Price:<%=p.productid.Price * p.quantity%></h4>
                    <form action="/app/deleteCartItem" method="POST">
                        <input type="hidden" value="<%=p.productid._id %>" name="_id">
                        <button class="btn danger" type="submit">Delete</button>
                    </form>
                </li>
                <% }) %>
            </ul>
            <hr>
            <div class="container">
                <div class="card" style="width: 300px;margin: 20px auto;">
                    <h3 style="text-align: center; ">Total Price: <%= total %></h3>
                </div>
            </div>
            <div class="centered">
                <a href="/app/checkout" class="btn btn-success">Order Now !</a>
            </div>
    
            <% } else { %>
            <h1>No Products in Cart!</h1>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>

    